                            <TextBlock Grid.Row="22" Text="Outbound speed"/>
                            <TextBlock Grid.Row="23" Text="Host address"/>
                            <TextBlock Grid.Row="24" Text="Address type"/>
                            <TextBlock Grid.Row="19" Grid.Column="1" Text="{Binding ConnectedProfile}"/>
                            <TextBlock Grid.Row="20" Grid.Column="1" Text="{Binding IanaInterfaceType}"/>
                            <TextBlock Grid.Row="21" Grid.Column="1" Text="{Binding InboundSpeed}"/>
                            <TextBlock Grid.Row="22" Grid.Column="1" Text="{Binding OutboundSpeed}"/>
                            <TextBlock Grid.Row="23" Grid.Column="1" Text="{Binding HostAddress}"/>
                            <TextBlock Grid.Row="24" Grid.Column="1" Text="{Binding AddressType}"/>

                        </Grid>

                    </Grid>
                </PivotItem>

                <PivotItem x:Name="Settings">
                    <PivotItem.Header>
                        <controls:TabHeader 
                            Label="Settings" SelectedImage="/Assets/settings-orange.png" UnselectedImage="/Assets/settings-grey.png" />
                    </PivotItem.Header>

                    <StackPanel x:Name="settingsGrid" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,36,0,0">
                        <Slider 
                            x:Name="processIntervalSlider" Header="Process polling interval in seconds" TickPlacement="TopLeft" Margin="0,0,6,0"
                            Minimum="0" Maximum="60" FontSize="10" VerticalAlignment="Center" Width="200" BorderThickness="0"
                            Value="{Binding ProcessPollingInterval, Mode=TwoWay}"/>
                        <Slider 
                            x:Name="appIntervalSlider" Header="App polling interval in seconds" TickPlacement="TopLeft" Margin="0,0,6,0"
